<% include ../partials/header.ejs %>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img class="img-circle img-responsive center-block" src="<%=user.profile.picture%>" alt=""></img>
                <br></br>
                <p class="text-center">Name: <%=user.profile.name%></p>
                <p class="text-center">Email: <%=user.email%></p>
                <p class="text-center"><a href="" class="btn btn-primary btn-lg">Edit</a></p>
            </div>
            <!--the following is for history-->
            <div class="col-md-8">
                <h2>History</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                           <th>Items' Name:</th>
                            <th>Paid</th> 
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0 ; i < user.history.length ; i++) { %>
                            <tr>
                                <td><%=user.history[i].item.name%></td>
                                <td><%=user.history[i].paid%></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<% include ../partials/footer.ejs %>